{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": {
      "~bioblocks-viz~": ["./src"],
      "~bioblocks-viz~/test": ["./test"],
      "~bioblocks-viz~/*": ["./src/*"],
      "jest": ["node_modules/@types/jest/index.d.ts"],
      "plotly.js-*": ["node_modules/@types/plotly.js"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./types/", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["examples/**/*", "src/**/*", "types", "configs/**/*", "test/**/*", "./bioblocks-viz.ts", "./*.tsx"],
  "typeAcquisition": {
    "enable": false
  }
}
